extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project.animation
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Use interpolation to dynamically add the project title.
        h1 #{info.project_name}

        //- Use interpolation to dynamically add the project description.
        p.lead.text-light
          | #{info.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- Use an `each` iterator to replace the li tags below and interpolation to dynamically add the technologies used in each project.
        ul
          each tech in info.technologies
            li #{tech}

        //- Template literals and interpolation to add URLs to the hrefs below so they link to the repo and the live version of each project.
        a.button.expanded(target="_blank" href=`${info.live_link}`) Live Demo
        a.button.expanded(target="_blank" href=`${info.github_link}`) GitHub Repo
    
    //- URLS for images for each projext

    img.image(src=`${info.images_url[0]}`)
    img.image(src=`${info.images_url[1]}`)

    