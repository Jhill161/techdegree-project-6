extends layout.pug

block content 
  article.grid-container.portfolio-intro.animation
    div

      //- Title
      h1 My Portfolio

      //- Brief description
      p.lead.text-light
        | Welcome!  Allow me to showcase the different skills I've learned along the way to becoming a Full Stack Developer and starting my job search.  You can find my latest projects that showcase these skills and technologies below.
  article.grid-container.portfolio-index.animation
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      //- Loop through each project and display 

      each project in projects
        .cell
          a(href=`projects/${project.id}`)
            img.thumbnail(src=`${project.images_url[0]}`)
            h5= project.project_name
      
